<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuração para permitir conexões HTTPS com domínios confiáveis -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Confia em certificados do sistema -->
            <certificates src="system" />
            <!-- Confia em certificados de usuário (para desenvolvimento) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Permite conexões com o domínio do Railway -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">me-leva-noronha-ms-homolog.up.railway.app</domain>
        <domain includeSubdomains="true">up.railway.app</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>




